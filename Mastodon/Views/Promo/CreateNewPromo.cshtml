@{
    ViewData["Title"] = "Oso Easy Promo - Create Custom Website Promotion";
}

<!--Vue container-->
<div id="newPromoApp">
    <section>
        <div class="container">
            <div class="row">
                <h2 class="home-header-container">
                    <i class="fa fa-question-circle-o helpText" style="color:#337ab7" aria-hidden="true" v-on:click="showHelpStep1()">
                    </i> Create or edit your website promotions
                </h2>
            </div>
            <br />

            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="coupon-tab" data-toggle="tab" href="#show-coupon" role="tab" aria-controls="show-coupon" aria-selected="true"><i class="fa fa-tags" aria-hidden="true"></i> Coupon Promotion</a>
                    <a class="nav-item nav-link" id="show-social-tab" data-toggle="tab" href="#show-social" role="tab" aria-controls="show-social" aria-selected="false"><i class="fa fa-facebook-official" aria-hidden="true"></i> Social Sharing</a>
                    <a class="nav-item nav-link" id="product-tab" data-toggle="tab" href="#show-product" role="tab" aria-controls="product-tab" aria-selected="false"><i class="fa fa-bullhorn" aria-hidden="true"></i> Product Promotion</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="show-coupon" role="tabpanel" aria-labelledby="coupon-tab">
                    @{ await Html.RenderPartialAsync("CreateCoupon.cshtml"); }
                </div>
                <div class="tab-pane fade" id="show-social" role="tabpanel" aria-labelledby="show-social-tab">
                    .SOCIAL..
                </div>
                <div class="tab-pane fade" id="show-product" role="tabpanel" aria-labelledby="product-tab">
                    ..Product.
                </div>
            </div>


        </div>
    </section>

    <!--Modals-->
    @{ await Html.RenderPartialAsync("PromoHelpModal.cshtml"); }

    <div id="deletePromoModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Delete this promotion?</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" v-on:click="confirmDeletePromo()"><i class="fa fa-remove" aria-hidden="true"></i> Delete</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div id="formSubmitHelpModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Promotion submission</h2>
                </div>
                <div class="modal-body">
                    <p>This field is for a custom message to your users once they submit their email and name for your promotion.</p>
                    <p>Make sure to let your users know their promotion code will be emailed to them.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

<environment names="Development">
    <script src="~/lib/vue/vue.js"></script>
</environment>
<environment names="Staging,Production">
    <!--Reference here instead of in footer because of null reference of Vue in a View-->
    <script src="https://unpkg.com/vue@2.5.16/dist/vue.min.js" asp-append-version="true"
            asp-fallback-src="~/lib/vue/vue/min.js">
    </script>
</environment>

<script async src="~/js/Promo/createPromo.min.js"></script>
<script async src="~/js/Promo/promoSlider.min.js"></script>
<link async rel="stylesheet" href="~/css/promo.min.css" />