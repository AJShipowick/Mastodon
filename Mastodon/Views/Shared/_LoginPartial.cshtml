@using Microsoft.AspNetCore.Identity

@inject SignInManager<OsOEasy.Data.Models.ApplicationUser> SignInManager
@inject UserManager<OsOEasy.Data.Models.ApplicationUser> UserManager

<div class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        var userName = UserManager.GetUserName(User);
        userName = userName.Substring(0, userName.IndexOf("@"));
        <li class="nav-item" style="border-radius:25px">
            <a class="nav-link" id="manage" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage Account">Hello @userName</a>
        </li>
        <li class="nav-item" style="border-radius:25px">
            <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="LogOut" title="Sign Out">Sign Out</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="border-radius:25px" id="register">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item" style="border-radius:25px" id="login">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
    }
</div>
