@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "OsO Easy Promo - User Login";
}

<div class="home-header-container">
    <h1 class="home-header">OsO Easy Promo</h1>
    <h2 style="font-family: 'Indie Flower', serif">Welcome back OsO Easy Promo user!</h2>
    <img src="~/images/osoeasypromo_panda_96.svg" />
</div>

<section>
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div class="row">
            <div asp-validation-summary="All" class="text-danger col-md-6 col-md-offset-1"></div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 col-md-offset-1 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 col-md-offset-1 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <button type="submit" class="btn btn-lg btn-primary">Log in</button>
            </div>
        </div>
        <h2 class="col-md-offset-3">
            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
        </h2>
        <h3 class="col-md-offset-3">
            <a asp-action="ForgotPassword">Forgot your password?</a>
        </h3>
    </form>
</section>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}