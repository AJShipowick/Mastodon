@model RegisterViewModel
@{
    ViewData["Title"] = "Oso Easy Promo - New User Registration";
    ViewData["MetaDescription"] = "Register for a new Oso Easy Promo account.  All new accounts include a free trial.  Contact us with questions on custom website promotions and coupons anytime.";
}
<meta name="google-signin-client_id" content="1029927866471-817snd2hini839grjun4p5l63t6c558n.apps.googleusercontent.com">

<section>
    <div class="container">
        <div class="home-header-container">
            <h1 class="home-header">New User Registration</h1>
            <h2 style="font-family: 'Indie Flower', serif">Try out Oso Easy Promo today for free</h2>
            <img src="~/images/osoeasypromo_panda_96.svg" alt="Oso Easy Promo logo, a panda bear" />
        </div>
        <br /><br />
        <div class="row">
            <div class="mx-auto">
                <div id="google-signin"></div>
                <h3 hidden id="googleLoginStatus"><i class="fa fa-spin fa-circle-o-notch" aria-hidden="true"></i>  Signing in with Google...</h3>
                <br />
                <h3 style="text-align:center">OR</h3>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary">Register with email</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script async src="~/js/HomePage/homePage.min.js"></script>
    <script async src="~/js/Account/signIn.min.js"></script>
    <script src="https://apis.google.com/js/platform.js?onload=showGoogleLogin" async defer></script>
}
