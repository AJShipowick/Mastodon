@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Oso Easy Promo - Change Password";
}

<div class="home-header-container">
    <h1 class="home-header">Oso Easy Promo</h1>
    <h2 style="font-family: 'Indie Flower', serif">Change your password</h2>
</div>

<section>
    <div class="container">
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
            <div class="row">
                <div class="col-sm-6 mx-auto">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 mx-auto">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 mx-auto">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="col-sm-6 mx-auto">
                <button type="submit" class="btn btn-primary">Change password</button>
            </div>
            <br /><br />

        </form>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
