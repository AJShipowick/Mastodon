@model IndexViewModel
@{
    ViewData["Title"] = "OsO Easy Promo - Manage Your Account";
}

<div class="home-header-container">
    <h2 style="font-family: 'Indie Flower', serif">Manage your account</h2>
    <img src="~/images/osoeasypromo_panda_96.svg" />
    <h4 style="font-family: 'Indie Flower', serif">Support@OsOEasyPromo.com</h4>
</div>

<p class="text-success">@ViewData["StatusMessage"]</p>

<div class="row">
    <div class="col-md-4">
        @if (Model.HasPassword)
        {
            <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change current password</a>
        }
        else
        {
            <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create your password</a>
        }
    </div>
    <div class="col-md-4">
        <a asp-area="" asp-controller="Home" asp-action="Pricing">
            <i class="fa fa-lg fa-dollar" style="color:green" aria-hidden="true"></i> View pricing options
        </a>
    </div>
</div>
<br />

<div class="row">
    <div class="form-group col-md-4">
        <label for="sel1">Subscription Plan:</label>
        <select class="form-control">
            <option>Free - $0</option>
            <option>Silver - $99 / month</option>
            <option>Bronze - $299 / month</option>
            <option>Gold - $1,499 / month</option>
        </select>
    </div>
    <div class="col-md-4">
        <p>Make payment....</p>
    </div>
</div>

<div class="row">
    <div class="form-group col-md-4">
        <label for="firstName">First Name:</label>
        <input type="text" class="form-control" id="firstName" value="@Model.FirstName">
    </div>
    <div class="form-group col-md-4">
        <label for="lastName">Last Name:</label>
        <input type="text" class="form-control" id="lastName" value="@Model.LastName">
    </div>
</div>
<div class="row">
    <div class="form-group col-md-4">
        <label for="website">Website:</label>
        <input type="text" class="form-control" id="website" value="@Model.Website">
    </div>
    <div class="form-group col-md-4">
        <label for="acctCreation">Account Creation Date:</label>
        <input type="text" class="form-control" id="acctCreation" value="@Model.AccountCreationDate">
    </div>
</div>

