@{
    ViewData["Title"] = "Website Promo Dashboard";
}

<!--Vue container-->
<div id="dashboardApp">

    <div class="row">
        <a asp-controller="Promo" asp-action="Index">
            <h3 v-cloak><i class="fa fa-question-circle-o" aria-hidden="true"></i> Current Subscription: {{Dashboard.CurrentSubscription}}</h3>
            <br />
        </a>
    </div>

    <div class="row">
        <div class="col-md-3">
            <a asp-area="Promotion" asp-controller="CreatePromo" asp-action="CreateNewPromo" class="btn btn-lg btn-primary "><i class="fa fa-rocket" aria-hidden="true"></i> Create New Promotion</a>
        </div>
        <div v-if="Dashboard.ActivePromo" class="col-md-3 col-md-offset-6">
            <a v-on:click="confirmStopActivePromo()" class="btn btn-lg btn-danger" style="text-align:center"><i class="fa fa-warning" aria-hidden="true"></i> STOP PROMOTION NOW</a>
        </div>
        <br />
    </div>

    <div class="col-sm-6" style="left:50%" id="ajaxLoading">
        <i class="fa fa-spin fa-circle-o-notch fa-5x" aria-hidden="true"></i>
        <!--todo, add help doc or video on how/why to create promotions when there is not one active yet.....-->
    </div>

    <div class="row">
        <div v-cloak v-if="Dashboard.ActivePromo === null">
            <h3><i class="fa fa-warning" aria-hidden="true"></i> No active promotions currently</h3>
        </div>
        <div hidden id="activePromoData">
            <div v-if="Dashboard.ActivePromo !== null" class="col-sm-6">
                <div class="row">
                    <div class="col-sm-6">
                        <h3>Active Promotion:</h3>
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div style="color:white" class="panel-title">
                                    <i v-on:click="editOldPromo(Dashboard.ActivePromoId)" class="fa fa-pencil-square-o helpText" title="View or edit this promotion" aria-hidden="true"></i> {{Dashboard.ActivePromo}}
                                    <i v-on:click="viewPromoEntries(Dashboard.ActivePromoId)" style="float:right" class="fa fa-address-card-o helpText" title="View promotion entries" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="panel-body">
                                <p>Claimed Entries: {{Dashboard.ActivePromoClaimedEntries}}</p>
                                <p>End Date: {{Dashboard.ActivePromoEndDate}}</p>
                            </div>
                        </div>



                        <h3> <i class="fa fa-code" aria-hidden="true"></i> Active Promo Script </h3>
                        {{Dashboard.ActivePromoScript}}

                    </div>
                </div>
            </div>
            <div v-if="Dashboard.ActivePromo !== null" class="col-sm-6">
                <h3><i class="fa fa-line-chart" aria-hidden="true"></i> Promo Stats</h3>
                <div class="well">
                    1
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    1
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    1
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    1
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />

                </div>
            </div>
        </div>
    </div>

    <div hidden id="inactivePromoData" v-if="Dashboard.InactivePromos !== null" class="row">
        <div class="row">
            <div class="col-sm-6">
                <h3><i class="fa fa-star-half-full" aria-hidden="true"></i> Inactive Promotions:</h3>
            </div>
        </div>
        <div v-for="promo in Dashboard.InactivePromos">
            <div class="col-sm-3">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <i v-on:click="editOldPromo(promo.PromoId)" class="fa fa-pencil-square-o helpText" title="View or edit this promotion" aria-hidden="true"></i> {{promo.PromoName}}
                            <i v-on:click="viewPromoEntries(promo.PromoId)"  style="float:right" class="fa fa-address-card-o helpText" title="View promotion entries" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{promo.PromoDiscount}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="color:white" class="panel-title">
        <i v-on:click="editOldPromo(Dashboard.ActivePromoId)" class="fa fa-pencil-square-o helpText" title="View or edit this promotion" aria-hidden="true"></i> {{Dashboard.ActivePromo}}
        <i v-on:click="viewPromoEntries(Dashboard.ActivePromoId)" style="float:right" class="fa fa-address-card-o helpText" title="View promotion entries" aria-hidden="true"></i>
    </div>




    <div id="stopPromoModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Stop Active Promotion: {{Dashboard.ActivePromo}}</h2>
                </div>
                <div class="modal-body">
                    <h3>Want to stop your promotion now?</h3>
                    <p>This action will take effect immediately on your website.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" v-on:click="stopPromoNow(Dashboard.ActivePromoId)"><i class="fa fa-warning" aria-hidden="true"></i> STOP NOW</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</div>



