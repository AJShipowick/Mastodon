@{
    ViewData["Title"] = "Create custom site promotion";
}

<h1><i class="fa fa-question-circle-o helpText" aria-hidden="true" onclick="showHelpStep1()"></i> Create a website promotion</h1><br />

<!--Vue container-->
<div id="newPromoApp">

    <!--This partial view will be updated to show the user what their custom slider will look and act like....-->
    @{ Html.RenderPartial("UserSlider.cshtml"); }
    @{ Html.RenderPartial("PromoHelpModal.cshtml"); }

    <div id="vueData">
        <div class="row">
            <div class="col-md-1">
                <p>Title:</p>
            </div>
            <div class="col-md-5">
                <input placeholder="Enter your title here, eg 'Save Today!'" type="text" class="form-control" v-model="Promotion.Title" />
            </div>
            <div class="col-md-1">
                <p>End Date: </p>
            </div>
            <div class="col-md-3" id="promoDate">
                <div class="input-group date">
                    <input type="text" class="form-control" v-model="Promotion.EndDate"><span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-1">
                <p>Code:</p>
            </div>
            <div class="col-md-5">
                <input placeholder="Enter a unique code here" type="text" class="form-control" v-model="Promotion.Code" />
            </div>
            <div class="col-md-1">
                <p>Discount: </p>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" placeholder="eg: 50% off everything!" v-model="Promotion.Discount" />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-1">
                <p>Details 1: </p>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" v-model="Promotion.Details1" />
            </div>
            <div class="col-md-1">
                <p>Details 2: </p>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" v-model="Promotion.Details2" />
            </div>
            <div class="col-md-1">
                <p>Fine Print: </p>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" v-model="Promotion.FinePrint" />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-1">
                <p>Image: </p>
            </div>
            <div class="col-md-6" onclick="showCustomSliderImage()">
                <label>
                    <input type="radio" name="promoImage" class="form-control" value="ContactUs1" v-model="Promotion.ImageName" />
                    <img id="ContactUs1" src="~/images/Slider/ContactUs1.png">
                </label>
                <label>
                    <input type="radio" name="promoImage" class="form-control" value="ContactUs2" v-model="Promotion.ImageName" />
                    <img id="ContactUs2" src="~/images/Slider/ContactUs2.png">
                </label>
                <label>
                    <input type="radio" name="promoImage" class="form-control" value="ContactUs3" v-model="Promotion.ImageName" />
                    <img id="ContactUs3" src="~/images/Slider/ContactUs3.png">
                </label>
                <label>
                    <input type="radio" name="promoImage" class="form-control" value="ContactUs4" v-model="Promotion.ImageName" />
                    <img id="ContactUs4" src="~/images/Slider/ContactUs4.png">
                </label>
            </div>
        </div>
        <br />

        <div class="row">
            <button class="col-md-1 btn btn-primary" onclick="saveCustomSettings(false); submitPromo()"> <i class="fa fa-cloud-upload" aria-hidden="true"></i> Save</button>
        </div>
        <br />
        <div class="row">
            <button class="col-md-2 btn btn-primary" onclick="saveCustomSettings(true)"> <i class="fa fa-rocket" aria-hidden="true"></i> Save & Start Promotion</button>
        </div>
    </div>
</div>

<script src="~/js/Promo/createPromo.js"></script>
<script src="~/js/Promo/promoSlider.js"></script>
<link rel="stylesheet" href="~/css/slider.css" />